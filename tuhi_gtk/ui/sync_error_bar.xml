<interface>
    <object class="GtkInfoBar" id="error_bar">
        <property name="message-type">error</property>
        <property name="show-close-button">false</property>
        <style>
            <class name="flat"/>
        </style>
        <child internal-child="content_area">
            <object class="GtkBox">
                <child>
                    <object class="GtkLabel" id="error_bar_text">
                        <property name="label">Error Bar</property>
                        <property name="visible">true</property>
                    </object>
                </child>
            </object>
        </child>
        <child internal-child="action_area">
            <object class="GtkBox">
                <child>
                    <object class="GtkButton" id="error_bar_action">
                        <property name="label">Action...</property>
                    </object>
                </child>
            </object>
        </child>
    </object>
</interface>