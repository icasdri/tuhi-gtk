<interface>
    <object class="GtkImage" id="icon_undo">
        <property name="icon_name">edit-undo-symbolic</property>
    </object>
    <object class="GtkImage" id="icon_redo">
        <property name="icon_name">edit-redo-symbolic</property>
    </object>
    <object class="GtkPopover" id="history_popover">
        <child>
            <object class="GtkBox" id="history_popover_box">
                <property name="orientation">vertical</property>
                <property name="margin-top">7</property>
                <property name="margin-bottom">7</property>
                <property name="margin-start">7</property>
                <property name="margin-end">7</property>
                <property name="width-request">150</property>
                <child>
                    <object class="GtkBox" id="history_popover_top_controls">
                        <property name="orientation">horizontal</property>
                        <child>
                            <object class="GtkButton" id="undo_button">
                                <style>
                                    <class name="menuitem"/>
                                </style>
                                <property name="height-request">30</property>
                                <property name="width-request">30</property>
                                <property name="image">icon_undo</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkButton" id="redo_button">
                                <style>
                                    <class name="menuitem"/>
                                </style>
                                <property name="height-request">30</property>
                                <property name="width-request">30</property>
                                <property name="image">icon_redo</property>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="GtkSeparator">
                        <property name="orientation">horizontal</property>
                        <property name="height-request">5</property>
                    </object>
                </child>
            </object>
        </child>
        <signal name="closed" handler="history_popover_closed"/>
    </object>
    <object class="GtkScrolledWindow" id="scrolled_history_content">
        <property name="hscrollbar-policy">never</property>
        <property name="vscrollbar-policy">automatic</property>
        <!--<property name="height-request">100</property>-->
    </object>
</interface>